<%- include('../partials/header') %>

<h2>All flights</h2>
<table>
    <thead>
        <tr>
            <th>Airline</th>
            <th>Airport</th>
            <th>flightNo</th>
            <th>Depature Time</th>
        </tr>
    </thead>
    <tbody>
        <% flights.forEach((f)=>{ %>
        <tr>
            <td><%= f.airline %></td>
            <td><%= f.airport %></td>
            <td><a href="/flights/<%= f._id %>"><%= f.flightNo %></a></td>
            <td><%= f.departs.toLocaleString() %></td>
            <td><a href="/flights/<%= f._id %>/edit">Edit</a></td>
        </tr>
        <% }) %>
    </tbody>
</table>


<%- include('../partials/footer') %>